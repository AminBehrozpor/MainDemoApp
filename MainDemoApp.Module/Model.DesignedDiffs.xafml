<?xml version="1.0" encoding="utf-8"?>
<Application Title="MainDemoApp">
  <ActionDesign>
    <Actions>
      <Action Id="ClearTasksAction" ToolTip="Clear the Current Contact task!" Caption="Clear Tasks" />
    </Actions>
    <ActionToContainerMapping>
      <ActionContainer Id="RecordEdit">
        <ActionLink ActionId="ClearTasksAction" IsNewNode="True" />
      </ActionContainer>
      <ActionContainer Id="View">
        <ActionLink ActionId="ClearTasksAction" Removed="True" />
      </ActionContainer>
    </ActionToContainerMapping>
  </ActionDesign>
  <BOModel>
    <Class Name="MainDemoApp.Module.BusinessObjects.Payment">
      <OwnMembers>
        <Member Name="Rate" ImmediatePostData="True" />
      </OwnMembers>
    </Class>
    <Class Name="MainDemoApp.Module.Contact" ObjectCaptionFormat="{0:FullName} from the {0:Department}" ImageName="employee1" />
    <Class Name="MainDemoApp.Module.Department" ImageName="BO_Department" />
    <Class Name="MainDemoApp.Module.Position" ImageName="BO_Position" />
  </BOModel>
  <Options>
    <LayoutManagerOptions RequiredFieldMark="*" />
  </Options>
  <SchemaModules>
    <SchemaModule Name="SystemModule" Version="19.1.3.0" IsNewNode="True" />
  </SchemaModules>
</Application>